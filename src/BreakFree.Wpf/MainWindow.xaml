<Window x:Class="BreakFree.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BreakFree" Height="480" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="BreakFree — трекер звичок"
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,12"/>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBox x:Name="HabitNameBox" Width="220" />
                <Button Content="Додати звичку" Click="AddHabit_Click" Margin="8,0,0,0"/>
                <Button Content="Зірвався сьогодні" Click="AddSlip_Click" Margin="8,0,0,0"/>
                <Button Content="Статистика (ADO.NET)" Click="ShowStats_Click" Margin="8,0,0,0"/>
            </StackPanel>
            <ListView x:Name="HabitList" Height="300" />
        </StackPanel>
    </Grid>
</Window>
